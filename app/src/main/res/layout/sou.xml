<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/shape_ufo_pg"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sou_image"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_margin="10px"
        android:layout_centerHorizontal="true"
        fresco:placeholderImage="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/sou_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sou_image"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sou_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sou_name"
        android:layout_centerHorizontal="true"
        android:text="price"
        android:textColor="#f00"
        android:textSize="18sp" />
</com.zhy.autolayout.AutoRelativeLayout>
