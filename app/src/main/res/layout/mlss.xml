<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/shape_ufo_pg"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image2"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_margin="20px"
        fresco:placeholderImage="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image2"
        android:layout_toRightOf="@id/image2"
        android:text="name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/price2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image2"
        android:layout_toRightOf="@id/image2"
        android:text="price"
        android:textColor="#f00"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20px"></RelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
