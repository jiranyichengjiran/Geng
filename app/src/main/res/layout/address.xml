<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/shape_ufo_pg">

        <TextView
            android:id="@+id/addr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="name" />

        <TextView
            android:id="@+id/addr_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:text="phone" />
        <TextView
            android:id="@+id/orderid"
            android:text="orderId"
            android:layout_below="@id/addr_phone"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/addr_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addr_name"
            android:layout_margin="20dp"
            android:text="address" />

        <TextView
            android:id="@+id/addr_xian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/addr_addr"
            android:background="@color/colorAcc" />

        <CheckBox
            android:id="@+id/moren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addr_xian"
            android:layout_centerVertical="true"
            android:layout_margin="18dp"
            android:text="是否设置为默认值" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addr_xian"
            android:layout_toRightOf="@id/moren"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addr_update"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/shape_ufo_pg"
                android:gravity="center"
                android:text="修改" />

            <TextView
                android:id="@+id/addr_delete"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/shape_ufo_pg"
                android:gravity="center"
                android:text="删除" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
